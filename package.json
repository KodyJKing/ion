{
    "name": "ion",
    "version": "1.9.0",
    "main": "lib/index",
    "repository": "https://github.com/krisnye/ion.git",
    "scripts": {
        "dev": "npm link pegs && yarn install && mkdir -p lib/compiler",
        "build": "pegs compiler/parser.pegs lib/compiler/parser.js && tsc -p .",
        "watch": "nodemon -w compiler/parser.pegs -x pegs compiler/parser.pegs lib/compiler/parser.js & tsc -p . --watch & yarn watchTest",
        "watchTest": "nodemon -w lib/compiler -w compiler/test -e js,ion lib/compiler/test",
        "watchWin": "start yarn watchTest & start nodemon -w compiler/parser.pegs -x pegs compiler/parser.pegs lib/compiler/parser.js & start tsc -p . --watch"

    },
    "author": {
        "name": "Kris Nye",
        "email": "krisnye@gmail.com"
    },
    "contributors": [
        {
            "name": "Kody King"
        }
    ],
    "bugs": {
        "url": "https://github.com/krisnye/ionic/issues"
    },
    "homepage": "https://github.com/krisnye/ion",
    "dependencies": {
        "text-diff": "^1.0.1"
    },
    "devDependencies": {
        "@types/escodegen": "^0.0.6",
        "@types/node": "^7.0.22",
        "escodegen": "^1.8.1",
        "jsondiffpatch": "^0.2.4",
        "pegs": "*"
    }
}
