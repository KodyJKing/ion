{
    "name": "ion",
    "version": "0.9.14",
    "main": "lib/index",
    "bin": {
        "ion": "bin/ion.js"
    },
    "repository": "https://github.com/krisnye/ion.git",
    "scripts": {
        "dev": "yarn install && yarn link",
        "clean": "rm -rf node_modules && rm -rf lib && yarn unlink",
        "build": "node bin/ion -c",
        "watch": "node bin/ion -w",
        "postinstall": "node boot/builder/_command.js -c"
    },
    "directories": {
        "lib": "lib",
        "src": "src"
    },
    "build": {
        "package": true,
        "merge": {
            "../dist/ion-all.js": {
                "exclude": ["builder"]
            },
            "../dist/ion-browser.js": {
                "exclude": ["builder", "test", "compiler"]
            },
            "../dist/ion-min.js": {
                "exclude": ["builder", "test", "compiler"],
                "compress": true
            }
        }
    },
    "contributors": ["krisnye@gmail.com"],
    "dependencies": {
    },
    "devDependencies": {
        "esprima": "1.1.x",
        "uglify-js": "2.4.x",
        "pegjs": "0.8.x",
        "lodash": "4.16.x",
        "source-map": "0.1.x",
        "coffee-script": "1.8.x",
        "express": "4.12.x"
    }
}
