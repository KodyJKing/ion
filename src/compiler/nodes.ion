
const
    getVariablesFromStatements = (statements) ->
        if not statements?
            return []
        return [s for s in statements if s.type is 'VariableDeclaration']

export const
    BlockStatement =
        isBlock: true
        newScope: true
    Program =
        isBlock: true
        newScope: true
        reactive: false
    Template =
        newScope: true
        reactive: true
    FunctionExpression =
        newScope: true
        shadow: true
    ForInStatement =
        newScope: true
    ForOfStatement = ForInStatement
