const
    ion = import '../'
    {DynamicExpression,ArrayExpression,Factory} = import './'

module.exports = class CallExpression extends DynamicExpression
    properties:
        args: null
        activate: ->
            super
            @calleeExpression ?= @context.createRuntime(@callee)
            @calleeExpression.watchValue(
                @calleeWatcher ?= (value) =>
                    if @isActive and not value? and not @existential and @loc?.start.source?
                        # we need to throw an exception here with location info
                        console.warn("Function is {{value}} ({{Factory.toCode(@callee)}}) ({{@loc.start.source}}:{{@loc.start.line}}:{{@loc.start.column + 1}})")

                    @calleeValue = value
                    # get thisArg and watchValue for changes
                    let thisArg = @calleeExpression.objectExpression?.value
                    if thisArg isnt @thisArg
                        ion.unobserve(@thisarg, @thisObserver)
                        @unwatch?()
                        @thisArg = thisArg
                        if not @calleeValue?.template # we don't need to watchValue the thisArg if the callee is a template
                            let deep = Array.isArray(thisArg)
                            if deep
                                # console.log('deep watchValue man-------------------------', thisArg, @calleeValue)
                                # deep watchValue
                                @unwatch = ion.patch.watch(
                                    thisArg
                                    @thisObserver ?= (patch) =>
                                        # console.log('deep change', patch)
                                        @evaluate()
                                )
                            else
                                # shallow observe
                                ion.observe(
                                    thisArg
                                    @thisObserver ?= =>
                                        @evaluate()
                                )
                    @evaluate()
            )
            @argumentExpressions ?= @context.createRuntime({type:'ArrayExpression',elements:@arguments, observeElements:not @calleeValue?.template})
            @argumentExpressions.watchValue(
                @argumentWatcher ?= (value) =>
                    @argumentsValue = value
                    @evaluate()
            )
        deactivate: ->
            super
            @calleeExpression.unwatchValue(@calleeWatcher)
            @argumentExpressions.unwatchValue(@argumentWatcher)
            if @template?
                @template.unwatchValue(@templateWatcher)
                delete @template
        _evaluateInternal: ->
            if not (@isActive and @calleeValue? and @argumentsValue?)
                return
            let value = undefined
            if @calleeValue.template
                if @template?
                    @template.unwatchValue(@templateWatcher)
                # always use new on templates
                @template = @calleeValue.apply(@thisArg, @argumentsValue)
                @template.watchValue(@templateWatcher ?= @setValue.bind(@))
            else
                if @type is 'NewExpression'
                    # create a new with variable args
                    value = ion.create(@calleeValue, @argumentsValue)
                else # @type is 'CallExpression'
                    value = @calleeValue.apply(@thisArg, @argumentsValue)
                @setValue(value)
        if DEBUG
            evaluate: ->
                try
                    @_evaluateInternal()
                catch e
                    # if we don't catch the errors, they might not be logged when occuring in an Object.observe callback
                    console.error(e.stack ? e)
        else
            evaluate: -> @_evaluateInternal()
